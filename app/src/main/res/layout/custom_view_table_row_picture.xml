<?xml version="1.0" encoding="utf-8"?>
    <merge xmlns:android="http://schemas.android.com/apk/res/android">
<TableRow
    android:id="@+id/CustomView_root_tablerow"
style="@style/MainDataFragmentTableRow"
    >

    <TextView
        style="@style/MainDataFragmentFirstColumnHeadings"
        android:id="@+id/CustomView_heading_textview"
        android:text="a"
        />

    <LinearLayout
        style="@style/MainDataFragmentSecondColumn"
        android:gravity="center"
        >

    <ImageView
        android:id="@+id/CustomView_field"
        android:src="@drawable/ic_launcher"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        />
    <Button
        android:id="@+id/CustomViewSnapShoot_capture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Snap"
        />
    </LinearLayout>
</TableRow>
</merge>
